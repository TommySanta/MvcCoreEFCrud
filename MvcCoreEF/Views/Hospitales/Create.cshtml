<h1 class="mb-3">Nuevo Hospital</h1>
<a asp-controller="Hospitales" asp-action="Index" class="btn btn-outline-primary mb-5">Volver</a>

<form method="post">
	<div class="mb-3">
		<label class="form-label">Hospital Cod</label>
		<input class="form-control" type="text" name="idhospital"/>
	</div>
	<div class="mb-3">
		<label class="form-label">Nombre</label>
		<input class="form-control" type="text" name="nombre"/>
	</div>
	<div class="mb-3">
		<label class="form-label">Direccion</label>
		<input class="form-control" type="text" name="direccion" />
	</div>
	<div class="mb-3">
		<label class="form-label">Telefono</label>
		<input class="form-control" type="text" name="telefono"/>
	</div>
	<div class="mb-3">
		<label class="form-label">Camas</label>
		<input class="form-control" type="text" name="camas" />
	</div>
	<button class="btn btn-primary" type="submit">Añadir</button>
</form>